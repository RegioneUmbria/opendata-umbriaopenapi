{% extends "UmbriaOpenApiBundle::base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="page-header">
                <h2>
                    {{ touristLocation.name }}
                    <a href="{{ touristLocation.uri }}" target="_blank">
                        <span class="glyphicon glyphicon-link pull-right" aria-hidden="true"></span>
                    </a>
                </h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-7">
                <p>
                <h4>Indirizzo</h4>
                <address>
                    {% if touristLocation.address.streetAddress != '' %}
                        {{ touristLocation.address.streetAddress }}
                    {% endif %}
                    <br>
                    {% if touristLocation.address.addressLocality != '' %}
                        {{ touristLocation.address.addressLocality }}
                    {% endif %}
                    {% if touristLocation.address.addressRegion != '' %}
                        , {{ touristLocation.address.addressRegion }}
                    {% endif %}
                    {% if touristLocation.address.postalCode != '' %}
                        {{ touristLocation.address.postalCode }}
                    {% endif %}
                </address>
                </p>
                <hr>
                <p>
                <h4>Caratteristiche</h4>
                {% if touristLocation.units is not null %}
                    <span title="Unità">Unità: </span>{{ touristLocation.units }}
                {% endif %}
                <br>
                {% if touristLocation.beds is not null %}
                    <span title="Letti">Letti: </span>{{ touristLocation.beds }}
                {% endif %}
                <br>
                {% if touristLocation.toilets is not null %}
                    <span title="Bagni">Bagni: </span>{{ touristLocation.toilets }}
                {% endif %}
                </p>
                <hr>
                <p>
                <h4>CIR</h4>
                {% if touristLocation.cir is not null %}
                    {{ touristLocation.cir }}
                {% else %}
                    -
                {% endif %}
                </p>
            </div>
            <div class="col-md-5">
                <div class="row">

                    <table class="table table-condensed">
                        <tbody>
                        <tr>
                            <td>
                                <small><b>Risorsa RDF</b></small>
                            </td>
                            <td><b>
                                    <a href="{{ touristLocation.uri }}">
                                        {{ touristLocation.uri }}
                                    </a>
                                </b>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <small>coordinate</small>
                            </td>
                            <td>
                                {% if touristLocation.address is not null and touristLocation.address.lat is not null %}
                                    <a href="{{ path('umbria_open_api_map') }}"
                                       onclick="setCoordCookie({{ touristLocation.address.lat }},{{ touristLocation.address.lng }},'tourist_location_cb')">
                                        {{ touristLocation.address.lat }},{{ touristLocation.address.lng }}
                                    </a>
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <small>categorie</small>
                            </td>
                            <td>
                                {% for category in touristLocation.categories %}
                                    {% if touristLocation.name is not null %}
                                        <span class="label label-default">{{ touristLocation.name }}</span>
                                        <br/>
                                    {% endif %}
                                {% endfor %}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <table class="table table-condensed">
                        <tbody>
                        <tr>
                            <td>
                                <small>tipi</small>
                            </td>
                            <td>
                                {% for type in touristLocation.types %}

                                    <a href="{{ type.uri }}">
                                        {% if type.name is not null %}{{ type.name }}
                                        {% else %}
                                            {{ type.uri }}
                                        {% endif %}
                                    </a>
                                    <br/>

                                {% endfor %}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <br/>
            <ol class="breadcrumb">
                <li><a href="{{ path('tourist_location_index') }}">Lista Strutture ricettive</a></li>
                <li class="active">{{ touristLocation.name }}</li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })

        {% set latitude = '' %}
        {% set longitude = '' %}
        {% if touristLocation.address.lat is not null %}
        {% set latitude = touristLocation.address.lat %}
        {% set longitude = touristLocation.address.lng %}
        {% endif %}


    </script>
{% endblock %}
