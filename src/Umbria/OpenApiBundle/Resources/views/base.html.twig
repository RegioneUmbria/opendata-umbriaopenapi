<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Umbria - Open API{% endblock %}</title>

    {% block stylesheets %}
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
        <!-- Custom styles for this template -->
        <link href="{{ asset('css/carousel.css') }}" rel="stylesheet">
        <link href="{{ asset('css/dev.css') }}" rel="stylesheet">
    {% endblock %}

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top navbar-inverse">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('umbria_open_api_homepage') }}">Umbria - Open API</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav ">
                <li class="dropdown show">
                    <a class="btn btn-secondary dropdown-toggle"
                       role="button" id="turismoMenuLink" data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false"
                    >
                        Turismo
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="turismoMenuLink">
                        <li><a class="dropdown-item" href="{{ path('umbria_open_api_map') }}">Mappa</a></li>
                        <li role="separator" class="divider"></li>
                        <li><a class="dropdown-item" href="{{ path('attractor_index') }}">Attrattori</a></li>
                        <li><a class="dropdown-item" href="{{ path('event_index') }}">Eventi</a></li>
                        <li><a class="dropdown-item" href="{{ path('accomodation_index') }}">Strutture ricettive</a>
                        </li>
                        <li><a class="dropdown-item" href="{{ path('sport_facility_index') }}">Impianti sportivi</a>
                        </li>
                        <li><a class="dropdown-item" href="{{ path('proposal_index') }}">Proposte</a></li>
                        <li><a class="dropdown-item" href="{{ path('profession_index') }}">Professioni</a></li>
                        <li><a class="dropdown-item" href="{{ path('travel_agency_index') }}">Agenzie di viaggi</a></li>
                        <li><a class="dropdown-item" href="{{ path('consortium_index') }}">Consorzi</a></li>
                        <li><a class="dropdown-item" href="{{ path('iat_index') }}">Iat</a></li>
                    </ul>
                </li>
                <li class="dropdown show">
                    <a class="btn btn-secondary dropdown-toggle"
                       role="button" id="statisticheMenuLink" data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false"
                    >
                        Statistiche
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="statisticheMenuLink">
                        <li><a class="dropdown-item" href="{{ path('statistiche_servizi-in-rete') }}">Servizi in
                                Rete</a></li>
                        <li><a class="dropdown-item" href="{{ path('statistiche_suape') }}">SUAPE</a></li>
                    </ul>
                </li>
                <li class="dropdown show">
                    <a class="btn btn-secondary dropdown-toggle"
                       role="button" id="developersMenuLink" data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false"
                    >
                        Developers
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="developersMenuLink">
                        <li><a class="dropdown-item" href="{{ path('nelmio_api_doc_index') }}">API docs</a></li>
                        <li><a class="dropdown-item" href="{{ path('umbria_open_api_sparql_manual') }}">SPARQL
                                Manual</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>
{% block body %}{% endblock %}


{% block javascripts %}
    <script src="{{ asset('js/jquery-2.2.4.js') }}"></script>
    <script src="{{ asset('js/markerclusterer_compiled.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/js.cookie.js') }}"></script>
    <script src="{{ asset('js/vendor/holder.min.js') }}"></script>

    <script>
        function toggleGroup(type, element) {
            for (var i = 0; i < markerGroups[type].length; i++) {
                var marker = markerGroups[type][i];
                if (element.checked) {
                    marker.setVisible(true);
                } else {
                    marker.setVisible(false);
                }
            }

        }
        function setCoordCookie(lat, lng, layer) {
            Cookies.set('lat', lat);
            Cookies.set('lng', lng);
            Cookies.set('zoom', 18);
            Cookies.set('layer', layer);
        }

    </script>
{% endblock %}

</body>
</html>