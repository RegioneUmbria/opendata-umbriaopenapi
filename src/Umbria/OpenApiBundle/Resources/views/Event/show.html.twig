{% extends "UmbriaOpenApiBundle::base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="page-header">
                <h2>
                    {{ event.name }}
                </h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-7">
                <h4>{{ event.name }}</h4>
                <p>
                    <small>
                        {{ event.comment }}
                    </small>
                </p>
                <br/>
                <br/>
                {% for description in event.descriptions %}
                    {{ description.title|raw }}
                    <br/>
                    {{ description.text|raw }}
                {% endfor %}
            </div>
            <div class="col-md-5">
                <div class="row">
                    <table class="table table-condensed">
                        <tbody>
                        <tr>
                            <td>
                                <small><b>Risorsa RDF</b></small>
                            </td>
                            <td><b>
                                    <a href="{{ event.uri }}">
                                        {{ event.uri }}
                                    </a>
                                </b>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <small>coordinate</small>
                            </td>
                            <td>
                                {% if event.lat != '' %}
                                    <a href="{{ path('umbria_open_api_map') }}"
                                       onclick="setCoordCookie({{ event.lat }},{{ event.lng }},'tourism_event_cb')">
                                            {{ event.lat }},{{ event.lng }}
                                        </a>
                                    {% else %}
                                        -
                                    {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <small>periodo</small>
                            </td>
                            <td>{{ event.startDate.format("d/m/Y") }} - {{ event.endDate.format("d/m/Y") }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <table class="table table-condensed">
                        <tbody>
                        <tr>
                            <td>
                                <small>tipo</small>
                            </td>
                            <td>
                                {% if event.types != null %}
                                    {{ event.types[0].uri }}
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    {% for image in event.images %}
                        <img src="{{ image }}" height="150">
                        <br/>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="row">
            <br/>
            <ol class="breadcrumb">
                <li><a href="{{ path('event_index') }}">Lista Eventi</a></li>
                <li class="active">{{ event.name }}</li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })

        {% set latitude = '' %}
        {% set longitude = '' %}
        {% if event.lat != null and event.lng != null %}
        {% set latitude = event.lat %}
        {% set longitude = event.lng %}
        {% endif %}

    </script>
{% endblock %}