{% extends "UmbriaProLocoBundle::frontend.html.twig" %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="page-header">
                <h2>Eventi</h2>
            </div>
            <table class="table table-hover table-striped">
                <thead>
                <tr>
                    <th></th>
                    <th>Titolo</th>
                    <th>Inizio</th>
                    <th>Fine</th>
                    <th><span class="badge pull-right">{{ pagination.getTotalItemCount }}</span></th>
                </tr>
                </thead>
                <tbody>
                {% for event in pagination %}
                    <tr>
                        <td class="text-muted">
                            <small>{{ loop.index }}</small>
                        </td>
                        <td>{{ event.title }}</td>
                        <td>{{ event.startDate }}</td>
                        <td>{{ event.endDate }}</td>
                        <td>
                            <a class="btn btn-info btn-xs" href="{{ path('event_show', { 'id': event.id }) }}">show</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="pull-right">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}
