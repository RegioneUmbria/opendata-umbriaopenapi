{% extends "UmbriaProLocoBundle::frontend.html.twig" %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="page-header">
                <h2>
                    {{ impiantoSportivo.name }}
                    <small>
                        {{ impiantoSportivo.shortDescription|raw }}
                    </small>
                    <a href="{{ impiantoSportivo.uri }}" target="_blank">
                        <span class="glyphicon glyphicon-link pull-right" aria-hidden="true"></span>
                    </a>
                </h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-7">
                <h4>{{ impiantoSportivo.name }}</h4>
            </div>
            <div class="col-md-5">
                <div class="row">

                    <table class="table table-condensed">
                        <tbody>
                        <tr>
                            <td>
                                <small><b>Risorsa RDF</b></small>
                            </td>
                            <td><b>
                                    <a href="{{ impiantoSportivo.uri }}">
                                        {{ impiantoSportivo.uri }}
                                    </a>
                                </b>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <small>keywords</small>
                            </td>
                            <td>
                                {% if impiantoSportivo.subject != '' %}
                                    {{ impiantoSportivo.subject }}
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <small>coordinate</small>
                            </td>
                            <td>
                                {% if impiantoSportivo.lat != '' %}
                                    <small>umbria:</small>
                                    <a href="{{ path('umbria_pro_loco_homepage') }}"
                                       onclick="setCoordCookie({{ impiantoSportivo.lat }},{{ impiantoSportivo.lng }})">
                                        {{ impiantoSportivo.lat }},{{ impiantoSportivo.lng }}
                                    </a>
                                    {#{% elseif coordinate.dbpediaLatitude != '' %}
                                        <small>dbpedia:
                                        </small>
                                        <a href="{{ path('umbria_pro_loco_homepage') }}"
                                           onclick="setCoordCookie({{ coordinate.dbpediaLatitude }},{{ coordinate.dbpediaLongitude }})">
                                            {{ coordinate.dbpediaLatitude }},{{ coordinate.dbpediaLongitude }}
                                        </a>
                                    {% elseif coordinate.googleLatitude != '' %}
                                        <small>google:
                                        </small>
                                        <a href="{{ path('umbria_pro_loco_homepage') }}"
                                           onclick="setCoordCookie({{ coordinate.googleLatitude }},{{ coordinate.googleLongitude }})">
                                            {{ coordinate.googleLatitude }}
                                            ,{{ coordinate.googleLongitude }}
                                        </a>
                                        <span class="glyphicon glyphicon-info-sign pull-right" data-toggle="tooltip"
                                              data-placement="top"
                                              title="Posizione calcola. Non se ne garantisce l'affidabilitÃ "></span>#}
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <small>comune</small>
                            </td>
                            <td>
                                {% if impiantoSportivo.municipality != '' %}
                                    {{ impiantoSportivo.municipality }}
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <small>codice ISTAT</small>
                            </td>
                            <td>
                                {% if impiantoSportivo.istat != '' %}
                                    {{ impiantoSportivo.istat }}
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <small>categorie</small>
                            </td>
                            <td>
                                {% for category in impiantoSportivo.categories %}
                                    {% if category.name is not null %}
                                        <span class="label label-default">{{ category.name }}</span>
                                        <br/>
                                    {% endif %}
                                {% endfor %}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <table class="table table-condensed">
                        <tbody>
                        <tr>
                            <td>
                                <small>tipi</small>
                            </td>
                            <td>
                                {% for type in impiantoSportivo.types %}

                                    <a href="{{ type.uri }}">
                                        {% if type.name is not null %}{{ type.name }}
                                        {% else %}
                                            {{ type.uri }}
                                        {% endif %}
                                    </a>
                                    <br/>

                                {% endfor %}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <small>pagina dbpedia</small>
                            </td>
                            <td>
                                {% if impiantoSportivo.hasDbpediaInfo %}
                                    <a href="{{ impiantoSportivo.sameAs[0].uri }}" target="_blank">
                                        {{ impiantoSportivo.sameAs[0].uri }}
                                    </a>
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <small>pagina wikipedia</small>
                            </td>
                            <td>
                                {% if impiantoSportivo.hasDbpediaInfo and impiantoSportivo.sameAs[0].resourceOriginUrl is not null %}
                                    <a href="{{ impiantoSportivo.sameAs[0].resourceOriginUrl }}" target="_blank">
                                        {{ impiantoSportivo.sameAs[0].name }}
                                    </a>
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <small>localizzazione dbpedia</small>
                            </td>
                            <td>
                                {% if impiantoSportivo.hasDbpediaLocalization() %}
                                    <a href="{{ impiantoSportivo.locatedIn[0].uri }}" target="_blank">
                                        {{ impiantoSportivo.locatedIn[0].name }}
                                    </a>
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    {% for image in impiantoSportivo.images %}
                        <img src="{{ image }}" height="150">
                        <br/>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="row">
            <br/>
            <ol class="breadcrumb">
                <li><a href="{{ path('impiantoSportivo_index') }}">Lista Attrattori</a></li>
                <li class="active">{{ impiantoSportivo.name }}</li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })

        {% set latitude = '' %}
        {% set longitude = '' %}
        {% if impiantoSportivo.lat != '' %}
        {% set latitude = impiantoSportivo.lat %}
        {% set longitude = impiantoSportivo.lng %}
        {#{% elseif coordinate.dbpediaLatitude != '' %}
        {% set latitude = coordinate.dbpediaLatitude %}
        {% set longitude = coordinate.dbpediaLongitude %}
        {% elseif coordinate.googleLatitude != '' %}
        {% set latitude = coordinate.googleLatitude %}
        {% set longitude = coordinate.googleLongitude %}#}
        {% endif %}


    </script>
{% endblock %}
