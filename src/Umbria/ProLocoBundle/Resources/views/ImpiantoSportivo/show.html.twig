{% extends "UmbriaProLocoBundle::frontend.html.twig" %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="page-header">
                <h2>
                    {{ impiantoSportivo.name }}
                    <a href="{{ impiantoSportivo.uri }}" target="_blank">
                        <span class="glyphicon glyphicon-link pull-right" aria-hidden="true"></span>
                    </a>
                </h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-7">
                <h4>Sport praticati</h4>
                <ul>
                    {% for sport in impiantoSportivo.sport %}

                        <li>{{ sport }}</li>

                    {% endfor %}
                </ul>

                <hr>
                <p>
                <h4>Indirizzo</h4>
                <address>
                    <p>
                        {% if impiantoSportivo.address.streetAddress != '' %}
                            {{ impiantoSportivo.address.streetAddress }}
                        {% endif %}
                        <br>
                        {% if impiantoSportivo.address.addressLocality != '' %}
                            {{ impiantoSportivo.address.addressLocality }}
                        {% endif %}
                        {% if impiantoSportivo.address.addressRegion != '' %}
                            , {{ impiantoSportivo.address.addressRegion }}
                        {% endif %}
                        {% if impiantoSportivo.address.postalCode != '' %}
                            {{ impiantoSportivo.address.postalCode }}
                        {% endif %}
                    </p>
                </address>
                <p>
                <hr>
                <p>
                    {% if impiantoSportivo.publicTransport is not null %}
                        <span title="Trasporto pubblico">Trasporto pubblico:</span>{{ impiantoSportivo.publicTransport }}
                    {% endif %}
                    <br>
                    {% if impiantoSportivo.parkings is not null %}
                        <span title="Parcheggi">Parcheggi:</span>{{ impiantoSportivo.parkings }}
                    {% endif %}
                    <br>
                    {% if impiantoSportivo.employees is not null %}
                        <span title="Impiegati">Impiegati:</span>{{ impiantoSportivo.employees }}
                    {% endif %}
                    <br>
                    {% if impiantoSportivo.disabledAccess is not null and  impiantoSportivo.disabledAccess=='true' %}
                        <span title="Accesso disabili">Accessibile ai disabili</span>
                    {% endif %}
                </p>

            </div>
            <div class="col-md-5">
                <div class="row">

                    <table class="table table-condensed">
                        <tbody>
                        <tr>
                            <td>
                                <small><b>Risorsa RDF</b></small>
                            </td>
                            <td><b>
                                    <a href="{{ impiantoSportivo.uri }}">
                                        {{ impiantoSportivo.uri }}
                                    </a>
                                </b>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <small>coordinate</small>
                            </td>
                            <td>
                                {% if impiantoSportivo.address is not null and impiantoSportivo.address.lat is not null %}
                                    <small>umbria:</small>
                                    <a href="{{ path('umbria_pro_loco_homepage') }}"
                                       onclick="setCoordCookie({{ impiantoSportivo.address.lat }},{{ impiantoSportivo.address.lng }},'tourism_impianto_sportivo_cb')">
                                        {{ impiantoSportivo.address.lat }},{{ impiantoSportivo.address.lng }}
                                    </a>
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <small>comune</small>
                            </td>
                            <td>
                                {% if impiantoSportivo.municipality is not null %}
                                    {{ impiantoSportivo.municipality }}
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <small>tipi</small>
                            </td>
                            <td>
                                {% for type in impiantoSportivo.types %}

                                    <a href="{{ type.uri }}">
                                        {% if type.name is not null %}{{ type.name }}
                                        {% else %}
                                            {{ type.uri }}
                                        {% endif %}
                                    </a>
                                    <br/>

                                {% endfor %}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <br/>
            <ol class="breadcrumb">
                <li><a href="{{ path('impianto_sportivo_index') }}">Lista Impianti Sportivi</a></li>
                <li class="active">{{ impiantoSportivo.name }}</li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })

        {% set latitude = '' %}
        {% set longitude = '' %}
        {% if impiantoSportivo.address.lat is not null %}
        {% set latitude = impiantoSportivo.address.lat %}
        {% set longitude = impiantoSportivo.address.lng %}
        {% endif %}


    </script>
{% endblock %}
