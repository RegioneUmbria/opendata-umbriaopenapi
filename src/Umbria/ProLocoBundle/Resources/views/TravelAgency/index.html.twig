{% extends "UmbriaProLocoBundle::frontend.html.twig" %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="page-header">
                <h2>Agenzie di Viaggio</h2>
            </div>
            <table class="table table-hover table-striped">
                <thead>
                <tr>
                    <th></th>
                    <th>{{ knp_pagination_sortable(pagination, 'Denominazione', 'ta.denominazione') }}</th>
                    <th><span class="badge pull-right">{{ pagination.getTotalItemCount }}</span></th>
                </tr>
                </thead>
                <tbody>
                {% for travelAgency in pagination %}
                    <tr>
                        <td class="text-muted">
                            <small>{{ loop.index }}</small>
                        </td>
                        <td>{{ travelAgency.denominazione }}</td>
                        <td>
                            <a class="btn btn-info btn-xs"
                               href="{{ path('travelagency_show', { 'id': travelAgency.id }) }}">show</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="pull-right">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}
