{% extends "UmbriaProLocoBundle::frontend.html.twig" %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="page-header">
                <h2>
                    {{ strutturaRicettiva.name }}
                    <a href="{{ strutturaRicettiva.uri }}" target="_blank">
                        <span class="glyphicon glyphicon-link pull-right" aria-hidden="true"></span>
                    </a>
                </h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-7">
                <h4>{{ strutturaRicettiva.name }}</h4>
                <hr>
                <p>
                    <address>
                <p>
                    {% if strutturaRicettiva.address.streetAddress != '' %}
                        {{ strutturaRicettiva.address.streetAddress }}
                    {% endif %}
                    <br>
                    {% if strutturaRicettiva.address.addressLocality != '' %}
                        {{ strutturaRicettiva.address.addressLocality }}
                    {% endif %}
                    {% if strutturaRicettiva.address.addressRegion != '' %}
                        , {{ strutturaRicettiva.address.addressRegion }}
                    {% endif %}
                    {% if strutturaRicettiva.address.postalCode != '' %}
                        {{ strutturaRicettiva.address.postalCode }}
                    {% endif %}
                </p>
                </address>
                <p>
                    {% for phone in strutturaRicettiva.telephone %}
                        <abbr title="Phone">P:</abbr> {{ phone }}<br>
                    {% endfor %}
                    {% for faxNumber in strutturaRicettiva.fax %}
                        <abbr title="Fax number">F:</abbr> {{ faxNumber }}<br>
                    {% endfor %}
                    {% for mbox in strutturaRicettiva.email %}
                        <abbr title="Email">E:</abbr> {{ mbox }}<br>
                    {% endfor %}
                    {% for homepage in strutturaRicettiva.resourceOriginUrl %}
                        <abbr title="Homepage">H:</abbr> {{ homepage }}<br>
                    {% endfor %}
                </p>
                <p>
                    {% if strutturaRicettiva.units is not null %}
                        <abbr title="UnitÃ ">U:</abbr>{{ strutturaRicettiva.units }}
                    {% endif %}
                    <br>
                    {% if strutturaRicettiva.beds is not null %}
                        <abbr title="Letti">L:</abbr>{{ strutturaRicettiva.beds }}
                    {% endif %}
                    <br>
                    {% if strutturaRicettiva.toilets is not null %}
                        <abbr title="Bagni">B:</abbr>{{ strutturaRicettiva.toilets }}
                    {% endif %}
                </p>
                </p>
            </div>
            <div class="col-md-5">
                <div class="row">

                    <table class="table table-condensed">
                        <tbody>
                        <tr>
                            <td>
                                <small><b>Risorsa RDF</b></small>
                            </td>
                            <td><b>
                                    <a href="{{ strutturaRicettiva.uri }}">
                                        {{ strutturaRicettiva.uri }}
                                    </a>
                                </b>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <small>coordinate</small>
                            </td>
                            <td>
                                {% if strutturaRicettiva.address is not null and strutturaRicettiva.address.lat is not null %}
                                    <small>umbria:</small>
                                    <a href="{{ path('umbria_pro_loco_homepage') }}"
                                       onclick="setCoordCookie({{ strutturaRicettiva.address.lat }},{{ strutturaRicettiva.address.lng }})">
                                        {{ strutturaRicettiva.address.lat }},{{ strutturaRicettiva.address.lng }}
                                    </a>
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <small>categorie</small>
                            </td>
                            <td>
                                {% for category in strutturaRicettiva.categories %}
                                    {% if category.name is not null %}
                                        <span class="label label-default">{{ category.name }}</span>
                                        <br/>
                                    {% endif %}
                                {% endfor %}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <table class="table table-condensed">
                        <tbody>
                        <tr>
                            <td>
                                <small>tipi</small>
                            </td>
                            <td>
                                {% for type in strutturaRicettiva.types %}

                                    <a href="{{ type.uri }}">
                                        {% if type.name is not null %}{{ type.name }}
                                        {% else %}
                                            {{ type.uri }}
                                        {% endif %}
                                    </a>
                                    <br/>

                                {% endfor %}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <br/>
            <ol class="breadcrumb">
                <li><a href="{{ path('struttura-ricettiva_index') }}">Lista Strutture ricettive</a></li>
                <li class="active">{{ strutturaRicettiva.name }}</li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })

        {% set latitude = '' %}
        {% set longitude = '' %}
        {% if strutturaRicettiva.address.lat is not null %}
        {% set latitude = strutturaRicettiva.address.lat %}
        {% set longitude = strutturaRicettiva.address.lng %}
        {% endif %}


    </script>
{% endblock %}
