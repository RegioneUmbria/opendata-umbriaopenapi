{% extends "UmbriaProLocoBundle::frontend.html.twig" %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="page-header">
                <h2>
                    {{ iat.denominazione }}
                </h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-7">
                <p>
                    {{ iat.listaComuni }}
                </p>
                <address>
                    <p>
                        <strong>{{ iat.denominazione }}</strong><br>
                        {% if iat.streetAddress != '' %}
                            {{ iat.streetAddress }}
                        {% endif %}
                        <br>
                        {% if iat.addressLocality != '' %}
                            {{ iat.addressLocality }}
                        {% endif %}
                        {% if iat.addressRegion != '' %}
                            , {{ iat.addressRegion }}
                        {% endif %}
                        {% if iat.postalCode != '' %}
                            {{ iat.postalCode }}
                        {% endif %}
                    </p>
                    <p>
                        {% for phone in iat.phone %}
                            <abbr title="Phone">P:</abbr> {{ phone.numTelefono }}<br>
                        {% endfor %}
                        {% for faxNumber in iat.faxNumber %}
                            <abbr title="Fax number">F:</abbr> {{ faxNumber.numFax }}<br>
                        {% endfor %}
                        {% for mbox in iat.mbox %}
                            <abbr title="Email">E:</abbr> {{ mbox.email }}<br>
                        {% endfor %}
                    </p>
                </address>

            </div>
            <div class="col-md-5">
                <div class="row">
                    <table class="table table-condensed">
                        <tbody>
                            <tr>
                                <td>
                                    <small><b>Risorsa RDF</b></small>
                                </td>
                                <td><b>
                                        <a href="{{ baseUrlRisorsa }}/{{ iat.idContenuto }}">
                                            {{ baseUrlRisorsa }}/{{ iat.idContenuto }}
                                        </a>
                                    </b>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <small>id contenuto</small>
                                </td>
                                <td>{{ iat.idContenuto }}</td>
                            </tr>
                            <tr>
                                <td>
                                    <small>coordinate</small>
                                </td>
                                <td>
                                    {% if iat.latitude != '' %}
                                        <a href="{{ path('umbria_pro_loco_homepage') }}"
                                           onclick="setCoordCookie({{ iat.latitude }},{{ iat.longitude }})">
                                        {{ iat.latitude }},{{ iat.longitude }}
                                        </a>
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <table class="table table-condensed">
                        <tbody>
                        <tr>
                            <td>
                                <small>tipo</small>
                            </td>
                            <td>
                                http://dati.umbria.it/tourism/ontology/AgenziaViaggio
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <br/>
            <ol class="breadcrumb">
                <li><a href="{{ path('iat_index') }}">Lista Iat</a></li>
                <li class="active">{{ iat.denominazione }}</li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })

        {% set latitude = '' %}
        {% set longitude = '' %}
        {% if iat.latitude != '' %}
        {% set latitude = iat.latitude %}
        {% set longitude = iat.longitude %}
        {% endif %}

    </script>
{% endblock %}